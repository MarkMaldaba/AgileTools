[% USE Bugzilla %]
[% resp_params = BLOCK -%]
    [%- FOREACH comp = team.components -%]
        [%- "component=" _ comp.name _ "&amp;" -%]
    [%- END -%]
    [%- FOREACH kw = team.keywords -%]
        [%- "keywords=" IF loop.first() %][% kw.name FILTER uri %][% "%2C" UNLESS loop.last() %]
    [%- END -%]&amp;
[%- END -%]
[% unprioritized_query = 'query_format=advanced&amp;' _
                         'f1=bug_agile_pool.pool_id&amp;o1=equals&amp;v1=-1&amp;' _
                         'resolution=---&amp;keywords_type=anywords&amp;' _ resp_params %]
[% columnlist = Param('agile_scrum_buglist_columns') FILTER uri %]

<h2>Scrum</h2>
<ul>
[% IF team.current_sprint %]
    <li>
        <a href="buglist.cgi?query_format=advanced&amp;f1=bug_agile_pool.pool_id&amp;o1=equals&amp;v1=[% team.current_sprint.id %]&amp;order=bug_agile_pool.pool_order&amp;columnlist=[% columnlist %]">
            Current sprint</a>, [% team.current_sprint.name FILTER html %]
        <ul>
            <li>
                <a href="buglist.cgi?query_format=advanced&amp;resolution=---&amp;f1=bug_agile_pool.pool_id&amp;o1=equals&amp;v1=[% team.current_sprint.id %]&amp;order=bug_agile_pool.pool_order&amp;columnlist=[% columnlist %]">
                Open items</a>
            </li>
            <li>
                <a href="buglist.cgi?query_format=advanced&amp;bug_status=RESOLVED&amp;bug_status=VERIFIED&amp;bug_status=CLOSED&amp;f1=bug_agile_pool.pool_id&amp;o1=equals&amp;v1=[% team.current_sprint.id %]&amp;order=bug_agile_pool.pool_order&amp;columnlist=[% columnlist %]">
                Resolved items</a>
            </li>
        </ul>
    </li>
[% END %]
[% IF team.previous_sprint %]
    <li>
        <a href="buglist.cgi?query_format=advanced&amp;f1=bug_agile_pool.pool_id&amp;o1=equals&amp;v1=[% team.previous_sprint.id %]&amp;order=bug_agile_pool.pool_order&amp;columnlist=[% columnlist %]">
            Previous Sprint</a>, [% team.previous_sprint.name FILTER html %]
    </li>
[% END %]
    <li>
        <a href="buglist.cgi?query_format=advanced&amp;f1=bug_agile_pool.pool_id&amp;o1=equals&amp;v1=[% team.backlog_id %]&amp;order=bug_agile_pool.pool_order&amp;columnlist=[% columnlist %]">Backlog</a>
    </li>
    <li>
        <a href="buglist.cgi?[% unprioritized_query %]">Unprioritized items</a>
    </li>
    [% IF user.in_group_id(team.group_id) %]
    <li>
        <a href="page.cgi?id=agiletools/scrum/planing.html&amp;team_id=[% team.id %]">Planing</a>
    </li>
    <li>
        <a href="page.cgi?id=agiletools/scrum/sprints.html&amp;team_id=[% team.id %]">All sprints</a>
    </li>
    [% END %]
</ul>
